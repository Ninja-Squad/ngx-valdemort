{
  "extends": ["config:base", ":semanticCommitTypeAll(chore)"],
  "packageRules": [
    {
      "packagePatterns": ["^@angular"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "packagePatterns": ["^typescript"],
      "separateMinorPatch": true,
      "minor": {
        "enabled": false
      },
      "major": {
        "enabled": false
      }
    }
  ],
  "automerge": true,
  "automergeType": "branch",
  "major": {
    "automerge": false
  }
}
